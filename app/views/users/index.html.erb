
<div class="container">
  <div class="row"> 
    <div class="col-6">
      <h3>user</h3>
      <table class="table-bordered table">
        <thead class="thead-dark">
          <tr>
            <th>first name</th>
            <th>last name</th>
            <th>email</th>
            <th>address</th>
            <th>contact</th>
          </tr>
          <% @users.all.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.address %></td>
            <td><%= user.contact %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Back', users_path, style: "button", class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', user_path(user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div> 
</div>
  <%= link_to 'new', new_user_path, style: "button", class: "btn btn-info" %>
