
<div class="container">
  <div class="row"> 
    <div class="col-6">
      
      <table class="table-bordered table">
        <thead class="thead-dark">
      <h2>Clothing</h2>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.all.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.product_category.try(:name) %></td>
            <td><%= image_tag product.image,:class=>'img'%></td>
            <td><%= link_to 'Show', product_path(product) %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product_path(product),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'new', new_product_path, style: "button", class: "btn btn-info" %>
    </div>
  </div> 
</div>

